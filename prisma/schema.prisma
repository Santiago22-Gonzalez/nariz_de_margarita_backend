generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model producto {
  id            Int             @id @default(autoincrement())
  nombre        String
  imagen        String
  precio        Float
  descuento     Float           @default(0)
  tipo          String
  cantidad      Int
  calificacion  Int             @default(0)
  fechaCreacion DateTime        @default(now())
  usuariocompra usuariocompra[]
}

model usuario {
  id              Int             @id @default(autoincrement())
  nombres         String
  fechaNacimiento DateTime
  lugarNacimiento String
  telefono        String
  correo          String          @unique(map: "Usuario_correo_key")
  contrasena      String  
  createdAt       DateTime        @default(now())
  experiencia     String
  usuariocompra   usuariocompra[]
}

model usuariocompra {
  id          Int      @id @default(autoincrement())
  usuarioId   Int
  productoId  Int
  cantidad    Int
  precioTotal Float
  fechaCompra DateTime @default(now())
  producto    producto @relation(fields: [productoId], references: [id], map: "UsuarioCompra_productoId_fkey")
  usuario     usuario  @relation(fields: [usuarioId], references: [id], map: "UsuarioCompra_usuarioId_fkey")

  @@index([productoId], map: "UsuarioCompra_productoId_fkey")
  @@index([usuarioId], map: "UsuarioCompra_usuarioId_fkey")
}
